package main;

import java.awt.Color;
import java.awt.Graphics2D;
import java.awt.image.BufferedImage;
import java.io.IOException;

import javax.imageio.ImageIO;

public class Player extends Entity{
	private GamePanel gamePanel;
	private KeyboardInput keyInput;
	
	private BufferedImage up1,up2,down1,down2,left1,left2,right1,right2;
	

	public Player(GamePanel gamePanel, KeyboardInput keyInput) {
		super(100,100,2);
		this.gamePanel = gamePanel;
		this.keyInput = keyInput;
	}
	
	public void getPlayerImage() {
		try {
			up1 = ImageIO.read(getClass().getResourceAsStream("/player/boy_up_1.png"));
			up2 = ImageIO.read(getClass().getResourceAsStream("/player/boy_up_2.png"));
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}
	
	public void update() {
		if (keyInput.isUpPressed())
			moveUp();
		else if (keyInput.isDownPressed())
			moveDown();
		else if (keyInput.isLeftPressed())
			moveLeft();
		else if (keyInput.isRightPressed())
			moveRight();
	}
	
	public void draw(Graphics2D tela) {
		tela.setColor(Color.WHITE);
		tela.fillRect(getX(), getY(), GamePanel.getTamanhoBloco(), GamePanel.getTamanhoBloco());
	}
}
